@model SampleProject.ViewModels.User.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "User"))
{
    @Html.ValidationSummary()<br/>
    
    <p>Your OpenId identifier:</p>
    @Model.OpenIdIdentifier<br/>
    @Html.HiddenFor(model => model.OpenIdIdentifier)
    
    @Html.Label("Username") 
    @Html.TextBoxFor(model => model.Username)<br/>
    
    @Html.Label("Email") 
    @Html.TextBoxFor(model => model.Email)<br/>
    
    @Html.Label("FullName") 
    @Html.TextBoxFor(model => model.FullName)<br/>
    
    @Html.HiddenFor(model => model.ReturnUrl)
    
    <input type="submit" value="Login" />
}
