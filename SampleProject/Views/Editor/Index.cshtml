@using SampleProject.HtmlHelpers
@model SampleProject.ViewModels.Editor.IndexViewModel
@{
    ViewBag.Title = "Editor";
}
@section scripts
{
    <!-- Configure API key -->
    <script>
        window.config =
            {
                apiKey: "@Model.ApiKey"
            };
        
    </script>
    <!-- require.js entry -->
    <script data-main="@Url.Content("~/Scripts/Editor/main.js")" src="@Url.Content("~/Scripts/Lib/require/require.js")"></script>
}

<!-- Infomation and control block -->
<div class="row">
    <div id="infobar" class="span12">
       
    </div>
</div>
<!-- End Information and control block -->


<div class="row">
    <!-- Tools bar -->
    <div id="toolbar" class="span12">
       
    </div>
    <!-- End Tools bar -->
</div>


<hr />
<div class="row">
    <!-- Blueprint elements control block -->
    <div id="navbar" class="span2">
        
    </div>
    <!-- Blueprint canvas block -->
    <div id="canvas" class="span8">
           
    </div>
    <!-- End Blueprint canvas block -->
</div>

<div id="error_modal" class="hide modal">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Error</h3>
    </div>
    <div class="modal-body">
        <div id="error_content"class="alert alert-error">
            
        </div>   
    </div>
</div>

<div id="login_modal" class="hide modal">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Please login</h3>
    </div>
    <div class="modal-body">
        <p>Save operation is available only for authorized users.</p>
    </div>
    <div class="modal-footer">
        <a class="btn btn-primary btn-large" href="@Url.Action("Login","User")">Login</a> 
    </div>
</div>

<div id="save_new_modal" class="hide modal">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Save new</h3>
    </div>
    <div class="modal-body">
        <p>You can't edit this model. But you can save the copy to your blueprints collection.</p>
    </div>
    <div class="modal-footer">
        <button id="btnSaveNew" class="btn btn-primary">Copy</button>
    </div>
</div>